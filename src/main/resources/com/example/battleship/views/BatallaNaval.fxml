<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" prefHeight="750" prefWidth="1100" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.battleship.controller.BatallaNavalController">

    <VBox alignment="CENTER" spacing="25">

        <!-- - TÍTULO - -->
        <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;" text="Batalla Naval" />

        <HBox alignment="CENTER" spacing="40">

            <!-- - TABLERO DEL JUGADOR + BARCOS - -->
            <VBox alignment="CENTER" spacing="10">

                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Tu Tablero" />

                <!-- TABLERO CON COORDENADAS -->
                <GridPane alignment="CENTER">
                    <!-- Espacio vacío esquina superior izquierda -->
                    <Region prefHeight="30" prefWidth="35" GridPane.columnIndex="0" GridPane.rowIndex="0" />

                    <!-- LETRAS SUPERIORES (A-J) -->
                    <HBox alignment="CENTER" spacing="0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="A" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="B" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="C" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="D" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="E" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="F" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="G" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="H" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="I" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="J" />
                    </HBox>

                    <!-- NÚMEROS LATERALES (1-10) -->
                    <VBox alignment="CENTER" prefWidth="35" spacing="0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="1" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="2" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="3" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="4" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="5" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="6" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="7" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="8" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="9" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="10" />
                    </VBox>

                    <!-- TABLERO DEL JUGADOR -->
                    <StackPane GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <!-- Pane para los barcos (debe estar DEBAJO del GridPane) -->
                        <Pane fx:id="shipsPane" pickOnBounds="false" prefHeight="700" prefWidth="700" style="-fx-background-color: transparent;" />

                        <!-- GridPane del tablero -->
                        <GridPane fx:id="playerBoard" alignment="CENTER" gridLinesVisible="true" prefHeight="700" prefWidth="700" style="-fx-background-color: #1e518b;" />
                    </StackPane>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

            </VBox>

            <!-- - TABLERO ENEMIGO - -->
            <VBox alignment="CENTER" spacing="10">

                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Tablero Enemigo" />

                <!-- TABLERO CON COORDENADAS -->
                <GridPane alignment="CENTER">
                    <!-- Espacio vacío esquina superior izquierda -->
                    <Region prefHeight="30" prefWidth="30" GridPane.columnIndex="0" GridPane.rowIndex="0" />

                    <!-- LETRAS SUPERIORES (A-J) -->
                    <HBox alignment="CENTER" spacing="0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="A" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="B" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="C" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="D" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="E" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="F" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="G" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="H" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="I" />
                        <Label alignment="CENTER" prefWidth="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="J" />
                    </HBox>

                    <!-- NÚMEROS LATERALES (1-10) -->
                    <VBox alignment="CENTER" prefWidth="35" spacing="0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="1" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="2" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="3" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="4" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="5" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="6" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="7" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="8" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="9" />
                        <Label alignment="CENTER" minWidth="35" prefHeight="70" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white;" text="10" />
                    </VBox>

                    <!-- TABLERO ENEMIGO -->
                    <GridPane fx:id="enemyBoard" alignment="CENTER" gridLinesVisible="true" prefHeight="700" prefWidth="700" style="-fx-background-color: #6b1e1e;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

            </VBox>

        </HBox>

        <!-- - BARCOS DISPONIBLES - -->
        <HBox alignment="CENTER" spacing="15" style="-fx-background-color: #f0f0f0; -fx-padding: 15; -fx-border-color: #999; -fx-border-width: 2;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Arrastra los barcos al tablero:" />

        </HBox>

        <!-- - INFO DEL JUEGO - -->
        <HBox alignment="CENTER" spacing="30">

            <Label fx:id="turnLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />

            <Label fx:id="shotsLabel" style="-fx-font-size: 18px; -fx-text-fill: white;" />

            <Label fx:id="playerShipsLabel" style="-fx-font-size: 18px; -fx-text-fill: white;" />

            <Label fx:id="enemyShipsLabel" style="-fx-font-size: 18px; -fx-text-fill: white;" />

        </HBox>

    </VBox>

</StackPane>
